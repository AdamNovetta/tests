{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowedToUseLambdaFunctionRelay",
            "Effect": "Allow",
            "Action": "lambda:InvokeFunction",
            "Resource": "arn:aws:lambda:*:*:function:lambda_function_relay"
        },
        {
            "Sid": "AllowedToAssumeRoleForLambdaRelay",
            "Effect": "Allow",
            "Action": "sts:AssumeRole",
            "Resource": "arn:aws:iam::*:role/*"
        }
    ]
}
